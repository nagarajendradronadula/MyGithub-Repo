<% layout("layouts/boilerPlate") %>

    <div class="row">

        <div class="col-8 offset-3 mt-3">
            <h3> <b>
                    <%= listing.title %>
                </b>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns mb-3">

            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5" href="/listings/<%= listing._id %>">Delete</button>
            </form>
        </div>

        <hr>

        <div class="col-8 offset-3 mb-3">
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range">
                </div>
                <div class="mt-3 mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="25" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please enter a valid comment</div>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
            </form>
        </div>

        <hr>

        <p><b>All Reviews</b></p>
        <div class="row">
            <% for(let review of listing.reviews) { %>
                <div class="card col-5 ms-3 mb-5">
                    <div class="card-body">
                        <h5 class="card-title">Apna College</h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating %> stars</p>
                    </div>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-dark mb-3">Delete</button></form>
            </div>
        <% } %>
    </div>
    </div>